@model IEnumerable<CapaEntidad.OrdenCompra>

@{
    ViewBag.Title = "Listado de Ordenes de Compra";
    Layout = "~/Views/Shared/_Layout.cshtml";  // Pon la ruta real a tu layout
}

<h2>@ViewBag.Title</h2>

<a href="@Url.Action("Create")" class="btn btn-success mb-3">
    <i class="fas fa-plus"></i> Nueva Orden de Compra
</a>

<table class="table table-dark table-striped table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Proveedor</th>
            <th>Usuario</th>
            <th>Fecha</th>
            <th>Estado</th>
            <th>Total</th>
            <th>Tipo Orden</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var orden in Model)
        {
            <tr>
                <td>@orden.id_orden_compra</td>
                <td>@(orden.id_proveedor.HasValue ? orden.id_proveedor.ToString() : "N/A")</td>
                <td>@orden.id_usuario</td>
                <td>@orden.fecha.ToString("dd/MM/yyyy")</td>
                <td>@orden.estado</td>
                <td>@orden.total.ToString("C")</td>
                <td>@orden.tipo_orden</td>
                <td>
                    <a href="@Url.Action("Details", new { id = orden.id_orden_compra })" class="btn btn-info btn-sm" title="Ver detalles">
                        <i class="fas fa-eye"></i>
                    </a>
                    <a href="@Url.Action("Edit", new { id = orden.id_orden_compra })" class="btn btn-primary btn-sm" title="Editar">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a href="@Url.Action("Anular", new { id = orden.id_orden_compra })" class="btn btn-danger btn-sm" title="Anular"
                       onclick="return confirm('¿Seguro que deseas anular esta orden?');">
                        <i class="fas fa-ban"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
