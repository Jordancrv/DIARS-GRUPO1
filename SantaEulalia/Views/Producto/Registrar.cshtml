@model SantaEulalia.ViewModels.ProductoViewModel

@{
    ViewData["Title"] = "Registrar Producto";

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Registrar Producto</h2>

<form asp-action="Registrar" method="post">
    <div class="form-group">
        <label asp-for="Producto.codigo"></label>
        <input asp-for="Producto.codigo" class="form-control" />
        <span asp-validation-for="Producto.codigo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Producto.nombre"></label>
        <input asp-for="Producto.nombre" class="form-control" />
        <span asp-validation-for="Producto.nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Producto.descripcion"></label>
        <textarea asp-for="Producto.descripcion" class="form-control"></textarea>
        <span asp-validation-for="Producto.descripcion" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Producto.precio"></label>
        <input asp-for="Producto.precio" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Producto.precio" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Producto.stock"></label>
        <input asp-for="Producto.stock" class="form-control" type="number" />
        <span asp-validation-for="Producto.stock" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Producto.stock_minimo"></label>
        <input asp-for="Producto.stock_minimo" class="form-control" type="number" />
        <span asp-validation-for="Producto.stock_minimo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Producto.unidad_medida"></label>
        <input asp-for="Producto.unidad_medida" class="form-control" />
        <span asp-validation-for="Producto.unidad_medida" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Producto.id_proveedor">Proveedor</label>
        <select asp-for="Producto.id_proveedor" asp-items="Model.Proveedores" class="form-control">
            <option value="">-- Seleccione --</option>
        </select>
        <span asp-validation-for="Producto.id_proveedor" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Producto.idCategoria">Categoría</label>
        <select asp-for="Producto.idCategoria" asp-items="Model.Categorias" class="form-control">
            <option value="">-- Seleccione --</option>
        </select>
        <span asp-validation-for="Producto.idCategoria" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Producto.idPresentacion">Presentación</label>
        <select asp-for="Producto.idPresentacion" asp-items="Model.Presentaciones" class="form-control">
            <option value="">-- Seleccione --</option>
        </select>
        <span asp-validation-for="Producto.idPresentacion" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Producto.idTipoEmpaque">Tipo de Empaque</label>
        <select asp-for="Producto.idTipoEmpaque" asp-items="Model.TiposEmpaque" class="form-control">
            <option value="">-- Seleccione --</option>
        </select>
        <span asp-validation-for="Producto.idTipoEmpaque" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="Producto.activo" class="form-check-input" />
        <label asp-for="Producto.activo" class="form-check-label">Activo</label>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Listar" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
