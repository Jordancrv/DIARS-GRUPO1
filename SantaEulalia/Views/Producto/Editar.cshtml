@model SantaEulalia.ViewModels.ProductoViewModel

@{
    ViewData["Title"] = "Editar Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">Editar Producto</h2>

<form asp-action="Editar" method="post">
    <input type="hidden" asp-for="Producto.id_producto" />

    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="Producto.codigo" class="form-label"></label>
            <input asp-for="Producto.codigo" class="form-control" />
            <span asp-validation-for="Producto.codigo" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Producto.nombre" class="form-label"></label>
            <input asp-for="Producto.nombre" class="form-control" />
            <span asp-validation-for="Producto.nombre" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Producto.descripcion" class="form-label"></label>
        <textarea asp-for="Producto.descripcion" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Producto.descripcion" class="text-danger"></span>
    </div>

    <div class="row mb-3">
        <div class="col-md-4">
            <label asp-for="Producto.precio" class="form-label"></label>
            <input asp-for="Producto.precio" class="form-control" />
            <span asp-validation-for="Producto.precio" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="Producto.precioventa" class="form-label"></label>
            <input asp-for="Producto.precioventa" class="form-control" />
            <span asp-validation-for="Producto.precioventa" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="Producto.unidad_medida" class="form-label"></label>
            <input asp-for="Producto.unidad_medida" class="form-control" />
            <span asp-validation-for="Producto.unidad_medida" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-4">
            <label asp-for="Producto.stock" class="form-label"></label>
            <input asp-for="Producto.stock" class="form-control" />
            <span asp-validation-for="Producto.stock" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="Producto.stock_minimo" class="form-label"></label>
            <input asp-for="Producto.stock_minimo" class="form-control" />
            <span asp-validation-for="Producto.stock_minimo" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="Producto.activo" class="form-label"></label>
            <select asp-for="Producto.activo" class="form-select">
                <option value="true">Activo</option>
                <option value="false">Inactivo</option>
            </select>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="Producto.id_proveedor" class="form-label">Proveedor</label>
            <select asp-for="Producto.id_proveedor" class="form-select" asp-items="Model.Proveedores">
                <option value="">-- Seleccionar --</option>
            </select>
        </div>
        <div class="col-md-6">
            <label asp-for="Producto.idCategoria" class="form-label">Categoría</label>
            <select asp-for="Producto.idCategoria" class="form-select" asp-items="Model.Categorias">
                <option value="">-- Seleccionar --</option>
            </select>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="Producto.idPresentacion" class="form-label">Presentación</label>
            <select asp-for="Producto.idPresentacion" class="form-select" asp-items="Model.Presentaciones">
                <option value="">-- Seleccionar --</option>
            </select>
        </div>
        <div class="col-md-6">
            <label asp-for="Producto.idTipoEmpaque" class="form-label">Tipo de Empaque</label>
            <select asp-for="Producto.idTipoEmpaque" class="form-select" asp-items="Model.TiposEmpaque">
                <option value="">-- Seleccionar --</option>
            </select>
        </div>
        <div class="mb-3">
            <label asp-for="Producto.imagen_url" class="form-label">URL de la Imagen</label>
            <input asp-for="Producto.imagen_url" class="form-control" />
            <span asp-validation-for="Producto.imagen_url" class="text-danger"></span>
        </div>

    </div>

    <div class="text-end">
        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
        <a asp-action="Listar" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
