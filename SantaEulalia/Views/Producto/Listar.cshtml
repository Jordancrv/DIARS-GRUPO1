@model IEnumerable<CapaEntidad.entProductos>

@{
    ViewData["Title"] = "Lista de Productos";

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista de Productos</h2>

<a asp-action="Registrar" class="btn btn-success mb-3">+ Registrar Nuevo Producto</a>

@if (!Model.Any())

{
    <div class="alert alert-info">No hay productos registrados.</div>
}

else

{
    <table class="table table-bordered table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Código</th>
                <th>Nombre</th>
                <th>Precio</th>
                <th>PrecioVenta</th>
                <th>Stock</th>
                <th>Unidad</th>
                <th>Proveedor</th>
                <th>Categoría</th>
                <th>Presentación</th>
                <th>Empaque</th>
                <th>Activo</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)

            {
                <tr>
                    <td>@item.codigo</td>
                    <td>@item.nombre</td>
                    <td>@item.precio.ToString("C")</td>
                    <td>@item.precioventa.ToString("C")</td>
                    <td>@item.stock</td>
                    <td>@item.unidad_medida</td>
                    <td>@item.nombreProveedor</td>
                    <td>@item.nombreCategoria</td>
                    <td>@item.nombrePresentacion</td>
                    <td>@item.nombreTipoEmpaque</td>
                    <td>@(item.activo ? "Sí" : "No")</td>
                    <td class="text-center">
                        @Html.ActionLink("Detalles", "Detalles", new { id = item.id_producto }, new { @class = "btn btn-sm btn-info" }) |
                        @Html.ActionLink("Editar", "Editar", new { id = item.id_producto }, new { @class = "btn btn-sm btn-warning" }) |
                        @Html.ActionLink("Eliminar", "Eliminar", new { id = item.id_producto }, new { @class = "btn btn-sm btn-danger" })
                    </td>
                    
                </tr>
            }
        </tbody>
    </table>
}
