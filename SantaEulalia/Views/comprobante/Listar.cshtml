@model IEnumerable<CapaEntidad.entComprobantePago>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Listar Comprobantes";
}

<h1>Lista de Comprobantes de Pago</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Nuevo Comprobante</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().IdComprobante)</th>
            <th>@Html.DisplayNameFor(model => model.First().Tipo)</th>
            <th>@Html.DisplayNameFor(model => model.First().Serie)</th>
            <th>@Html.DisplayNameFor(model => model.First().Numero)</th>
            <th>@Html.DisplayNameFor(model => model.First().Activo)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var comp in Model)
        {
            <tr>
                <td>@comp.IdComprobante</td>
                <td>@comp.Tipo</td>
                <td>@comp.Serie</td>
                <td>@comp.Numero</td>
                <td>@(comp.Activo ? "Activo" : "Inactivo")</td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = comp.IdComprobante }) |
                    @Html.ActionLink("Detalles", "Details", new { id = comp.IdComprobante }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = comp.IdComprobante })
                </td>
            </tr>
        }
    </tbody>
</table>