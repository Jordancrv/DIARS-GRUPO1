@model List<CapaEntidad.entProductos>
@{
    ViewBag.Title = "Carrito";
    Layout = "~/Views/Shared/LayoutUser.cshtml";

    decimal total = Model.Sum(p => p.precioventa);
}

<div class="container mt-5">
    <h2 class="mb-4">🛒 Carrito de Compras</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">Tu carrito está vacío.</div>
    }
    else
    {
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Imagen</th>
                    <th>Producto</th>
                    <th>Precio</th>
                    <th>Acción</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="width: 100px;">
                            <img src="@(item.imagen_url?.StartsWith("http") == true
                                        ? item.imagen_url
                                        : Url.Content("~/img-user/products/" + item.imagen_url))"
                                 alt="@item.nombre"
                                 class="img-fluid"
                                 style="max-height: 80px;"
                                 onerror="this.src='@Url.Content("~/img-user/default.jpg")'" />
                        </td>
                        <td>@item.nombre</td>
                        <td>S/ @item.precioventa</td>
                        <td>
                            <a href="@Url.Action("Eliminar", "Carrito", new { id = item.id_producto })"
                               class="btn btn-sm btn-danger">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="d-flex justify-content-between">
            <h4>Total: <strong>S/ @total</strong></h4>

            <div>
                <a href="@Url.Action("Vaciar", "Carrito")" class="btn btn-outline-danger me-2">Vaciar Carrito</a>
                <a href="@Url.Action("Tienda", "Producto")" class="btn btn-primary">Seguir Comprando</a>
            </div>
        </div>
    }
</div>
