@{
    Layout = "~/Views/Shared/LayoutCompras.cshtml";
    ViewBag.Title = "Pago de Compra";
}

<h2>Registrar Pago</h2>

<form>
    <div class="mb-3">
        <label for="orden" class="form-label">N° Orden de Compra</label>
        <input type="text" class="form-control" id="orden" placeholder="Código de la orden">
    </div>
    <div class="mb-3">
        <label for="monto" class="form-label">Monto a pagar</label>
        <input type="number" step="0.01" class="form-control" id="monto" placeholder="Monto">
    </div>
    <div class="mb-3">
        <label for="metodo" class="form-label">Método de Pago</label>
        <select class="form-select" id="metodo">
            <option>Transferencia</option>
            <option>Cheque</option>
            <option>Tarjeta</option>
        </select>
    </div>
    <div class="mb-3">
        <label for="fechaPago" class="form-label">Fecha de Pago</label>
        <input type="date" class="form-control" id="fechaPago">
    </div>
    <button type="submit" class="btn btn-danger">Registrar Pago</button>
</form>
