@model CapaEntidad.entProveedores

@{
    ViewBag.Title = "Registrar Proveedor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Registrar Proveedor</h2>

<form asp-action="Registrar" method="post">
    <div>
        <label>Razón Social:</label>
        <input name="razon_social" class="form-control" required />
    </div>
    <div>
        <label>RUC:</label>
        <input name="ruc" class="form-control" required />
    </div>
    <div>
        <label>Dirección:</label>
        <input name="direccion" class="form-control" />
    </div>
    <div>
        <label>Contacto:</label>
        <input name="contacto" class="form-control" />
    </div>
    <div>
        <label>Usuario:</label>
        <input name="id_usuario" class="form-control" />
    </div>

    <div>
        <label>Correos:</label>
        <div id="correoContainer">
            <input name="Correos" class="form-control mb-1" />
        </div>
        <button type="button" onclick="agregarCorreo()">+ Agregar correo</button>
    </div>

    <div>
        <label>Teléfonos:</label>
        <div id="telefonoContainer">
            <input name="Telefonos" class="form-control mb-1" />
        </div>
        <button type="button" onclick="agregarTelefono()">+ Agregar teléfono</button>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a asp-action="Listar" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    <script>
        function agregarCorreo() {
            var container = document.getElementById("correoContainer");
            var input = document.createElement("input");
            input.name = "Correos";
            input.className = "form-control mb-1";
            container.appendChild(input);
        }

        function agregarTelefono() {
            var container = document.getElementById("telefonoContainer");
            var input = document.createElement("input");
            input.name = "Telefonos";
            input.className = "form-control mb-1";
            container.appendChild(input);
        }
    </script>
}
