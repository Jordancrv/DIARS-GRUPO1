@model CapaEntidad.entProveedores

@{
    ViewBag.Title = "Editar Proveedor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar Proveedor</h2>

<form asp-action="Editar" method="post">
    <input type="hidden" asp-for="id_proveedor" />

    <div>
        <label>Razón Social:</label>
        <input asp-for="razon_social" class="form-control" required />
    </div>
    <div>
        <label>RUC:</label>
        <input asp-for="ruc" class="form-control" required />
    </div>
    <div>
        <label>Dirección:</label>
        <input asp-for="direccion" class="form-control" />
    </div>
    <div>
        <label>Contacto:</label>
        <input asp-for="contacto" class="form-control" />
    </div>
    <div>
        <label>Usuario:</label>
        <input asp-for="id_usuario" class="form-control" />

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
        <a asp-action="Listar" class="btn btn-secondary">Cancelar</a>
    </div>
</form>