@model CapaEntidad.entPromociones

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Crear Promoción";
}

<h1>Crear Promoción</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="NombrePromocion" class="control-label"></label>
                <input asp-for="NombrePromocion" class="form-control" />
                <span asp-validation-for="NombrePromocion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Descuento" class="control-label"></label>
                <input asp-for="Descuento" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Descuento" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FechaInicio" class="control-label"></label>
                <input asp-for="FechaInicio" class="form-control" type="date" />
                <span asp-validation-for="FechaInicio" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FechaFin" class="control-label"></label>
                <input asp-for="FechaFin" class="form-control" type="date" />
                <span asp-validation-for="FechaFin" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="idTipoPromocion" class="control-label">Tipo de Promoción</label>
                <select asp-for="idTipoPromocion" class="form-control" asp-items="ViewBag.TipoPromociones"></select>
                <span asp-validation-for="idTipoPromocion" class="text-danger"></span>
            </div>



            <div class="form-group form-check">
                <input asp-for="Estado" class="form-check-input" type="checkbox" />
                <label asp-for="Estado" class="form-check-label">¿Está activa?</label>
            </div>

            <button type="submit" class="btn btn-success">Guardar</button>
            <a asp-action="Listar" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
