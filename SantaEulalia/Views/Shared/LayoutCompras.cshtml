<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Módulo de Compras</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body class="bg-light">

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Compras</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCompras">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCompras">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "ClienteCompra")">Inicio</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("OrdenCompra", "ClienteCompra")">Orden de Compra</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Cotizacion", "ClienteCompra")">Cotización</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Recepcion", "ClienteCompra")">Recepción</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Pago", "ClienteCompra")">Pago</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Compras</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <!-- Otras opciones -->
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "ClienteCompra")">Inicio Compras</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Dashboard")">Ir a Ventas</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="container mt-4">
        @RenderBody()
    </main>

    <footer class="text-center mt-5 mb-3 text-muted">
        &copy; @DateTime.Now.Year - Sistema de Compras
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
