@using Microsoft.AspNetCore.Http
@{
    var rol = Context.Session.GetString("rol");
}
<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title - Santa Eulalia</title>

    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="~/css-user/site.css" rel="stylesheet" />

    @RenderSection("Styles", required: false)
</head>

<body>
    <header class="bg-success text-white">
        <div class="container d-flex justify-content-between align-items-center py-2">
            <a href="@Url.Action("Tienda", "Producto")">
                <img src="~/img-user/Logo-SantaEulalia2.png" alt="Logo" height="50px" />
            </a>

            <div class="d-flex align-items-center">
                <ul class="list-inline mb-0 d-flex align-items-center">
                    <!-- Redes Sociales -->
                    <li class="list-inline-item">
                        <a href="https://www.facebook.com/tuPagina" target="_blank">
                            <img src="https://cdn-icons-png.flaticon.com/512/733/733547.png" alt="Facebook" width="24" height="24">
                        </a>
                    </li>
                    <li class="list-inline-item">
                        <a href="https://www.instagram.com/tuPerfil" target="_blank">
                            <img src="https://cdn-icons-png.flaticon.com/512/2111/2111463.png" alt="Instagram" width="24" height="24">
                        </a>
                    </li>

                    <!-- Botones de sesión -->
                    @if (rol == null)
                    {
                        <li class="list-inline-item ml-3">
                            <a href="@Url.Action("Index", "Login")" class="btn btn-light btn-sm rounded-pill px-3">
                                <i class="fa fa-sign-in-alt"></i> Iniciar sesión
                            </a>
                        </li>
                    }
                    else
                    {
                        if (rol == "admin")
                        {
                            <li class="list-inline-item ml-3">
                                <a href="@Url.Action("Index", "PanelAdmin")" class="btn btn-outline-light btn-sm rounded-pill px-3">
                                    <i class="fa fa-user-shield"></i> Panel Admin
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="list-inline-item ml-3">
                                <a href="@Url.Action("PanelUser", "Home")" class="btn btn-outline-light btn-sm rounded-pill px-3">
                                    <i class="fa fa-user"></i> Mi Cuenta
                                </a>
                            </li>
                        }
                        <li class="list-inline-item ml-2">
                            <a href="@Url.Action("CerrarSesion", "Login")" class="btn btn-danger btn-sm rounded-pill px-3">
                                <i class="fa fa-sign-out-alt"></i> Cerrar sesión
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </header>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <footer id="footer">
        <div style="padding: 40px 0; background-color: #f8f9fa;">
            <div class="container" style="display: flex; flex-wrap: wrap; justify-content: space-between; align-items: flex-start;">
                <!-- Columna izquierda: información de contacto -->
                <div style="flex: 1 1 300px; max-width: 48%;">
                    <h4 style="margin-bottom: 15px;">Contáctanos</h4>
                    <ul style="list-style: none; padding: 0; margin: 0;">
                        <li style="margin-bottom: 10px;">
                            <img src="https://img.icons8.com/emoji/20/round-pushpin-emoji.png" alt="Ubicación" style="vertical-align: middle; margin-right: 6px;">
                            <b>CAL. LOS LAURELES - FLORENCIA DE MORA - TRUJILLO</b>
                        </li>
                        <li style="margin-bottom: 10px;">
                            <img src="https://img.icons8.com/ios-filled/20/000000/phone.png" alt="Teléfono" style="vertical-align: middle; margin-right: 6px;">
                            <b>Teléfono: (+51) 977 760 985</b>
                        </li>
                        <li style="margin-bottom: 10px;">
                            <img src="https://img.icons8.com/ios-glyphs/20/000000/new-post.png" alt="Correo" style="vertical-align: middle; margin-right: 6px;">
                            <b>Email: santaeulaliadistribuciones@gmail.com</b>
                        </li>
                        <li>
                            <img src="https://img.icons8.com/ios-glyphs/20/000000/clock--v1.png" alt="Horario" style="vertical-align: middle; margin-right: 6px;">
                            <b>Horario: 8:00 - 20:00</b>
                        </li>
                    </ul>
                </div>

                <!-- Columna derecha: métodos de pago -->
                <div style="flex: 1 1 300px; max-width: 48%;">
                    <h4 style="margin-bottom: 15px;">Métodos de Pago</h4>
                    <div style="display: flex; flex-wrap: wrap; gap: 10px;">
                        <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQFniXVhcEhBGItKiX2GGyzqQImNETVeq7i5Q&s" width="51" height="36" alt="Tarjeta 1">
                        <img src="https://freepngimg.com/thumb/categories/1783.png" width="51" height="36" alt="Tarjeta 2">
                        <img src="https://play-lh.googleusercontent.com/y5S3ZIz-ohg3FirlISnk3ca2yQ6cd825OpA0YK9qklc5W8MLSe0NEIEqoV-pZDvO0A8" width="51" height="36" alt="Tarjeta 3">
                        <img src="https://images.seeklogo.com/logo-png/38/1/plin-logo-png_seeklogo-386806.png" width="51" height="36" alt="Plin">
                        <img src="https://upload.wikimedia.org/wikipedia/commons/a/a4/Paypal_2014_logo.png" width="51" height="36" alt="Paypal">
                    </div>
                </div>
            </div>

            <!-- Pie de página centrado -->
            <div style="text-align: center; margin-top: 30px;">
                <p style="margin-bottom: 5px;">&copy; 2025 Santa Eulalia - Todos los derechos reservados</p>
                <ul style="list-style: none; padding: 0; margin: 0;">
                    <li style="display: inline-block; margin: 0 10px;"><a href="#">Política de privacidad</a></li>
                    <li style="display: inline-block; margin: 0 10px;"><a href="#">Términos y condiciones</a></li>
                </ul>
            </div>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <script src="~/js-user/functions.js"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>
